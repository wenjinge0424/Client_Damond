<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/right_gray"
    tools:context=".ui.help.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="horizontal" >
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_small_padding"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/app_small_padding"
                android:textSize="@dimen/app_font_h1"
                android:textColor="@color/app_back_color"
                android:text="PHYSICAL INTERVENTION"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/app_small_padding"
                android:layout_height="1dp"
                android:background="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_small_padding"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/app_medium_padding"
                    android:layout_gravity="center"
                    android:src="@mipmap/test_user_thumb">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_medium_padding"
                    android:layout_marginRight="@dimen/app_medium_padding"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_medium_padding"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_action_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:gravity="right"
                            android:textAlignment="gravity"
                            android:text="You are going to the position of"
                            android:textSize="@dimen/app_font_h3"/>
                        <TextView
                            android:id="@+id/txt_officer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/app_small_padding"
                            android:textColor="@color/black"
                            android:gravity="right"
                            android:textAlignment="gravity"
                            android:text="Emin ozandac"
                            android:textSize="@dimen/app_font_h1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/app_font_h1"
                android:paddingLeft="@dimen/app_font_h1"
                android:background="@mipmap/btn_blue"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/app_large_padding"
                android:textColor="@android:color/white"
                android:text="End of mission">
            </Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>