<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_back_color</item>
        <item name="colorPrimaryDark">@color/app_back_color</item>
        <item name="colorAccent">@color/app_back_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="normalEdit" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:padding">@dimen/nav_header_vertical_spacing</item>
        <item name="android:background">@drawable/bg_rectangle_black_line</item>
    </style>

    <style name="normalButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_rectangle_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/nav_header_vertical_spacing</item>
    </style>

</resources>
